#include<bits/stdc++.h>
using namespace std;


int main(){
    // char s,q;
    // 

    long long n,y=0,m=0,d=0;
    
    cin>>n;
    vector<long long> v;
    v.push_back(n);
        

    while(n!=1){
        
        if(n%2==0 && n>0){
            n=(n/2)*1LL;
            v.push_back(n);
        }
        else if(n%2!=0 && n>0){
            n=((n*3)+1)*1LL;
            v.push_back(n);

        }
        
    }
    for(auto it : v){
        cout<<it<<" ";
    }
    
    
    return 0;
}
